@model ImageAsset

@{
    var asset = Model.Image.FirstOrDefault();
}

@if (asset.Type?.StartsWith("image") == true)
{
    <figure class="image">
        <img 
             src="@Model.Image.FirstOrDefault()?.Url" 
             srcset="@Model.Image.FirstOrDefault()?.Url" 
             alt="@(asset.Description ??  asset.Name)"   loading="lazy">
        <figcaption>@Model.Label</figcaption>
    </figure>
}

@if (asset.Type?.StartsWith("video") == true)
{
    <figure class="video">
        <video autoplay loop muted playsinline style="pointer-events: none;" title="@(asset.Description ?? asset.Name)">
            <source src="@asset.Url" type="video/mp4" />
            Sorry, your browser doesn't support embedded videos.
        </video>
    </figure>

}


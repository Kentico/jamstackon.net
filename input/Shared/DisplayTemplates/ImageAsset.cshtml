@model ImageAsset

@{
    var asset = Model.Image.FirstOrDefault();
}

@if (asset.Type?.StartsWith("image") == true)
{
    <figure class="image">
        <img src="@Model.Image.FirstOrDefault()?.Url" srcset="@Model.Image.FirstOrDefault()?.Url" alt="@Model.Image.FirstOrDefault()?.Description" loading="lazy">
        <figcaption>@Model.Label</figcaption>
    </figure>
}

@if (asset.Type?.StartsWith("video") == true)
{
    <figure class="video">
        <video autoplay loop muted playsinline style="pointer-events: none;">
            <source src="@(asset.Url)" type="video/mp4" />
            Sorry, your browser doesn't support embedded videos.
        </video>
    </figure>

}


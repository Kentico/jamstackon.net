<!DOCTYPE html>
<html lang="en">
<head>
    <title>TODO TITLE with SEO</title>
    <link rel="stylesheet" href="@IExecutionContext.Current.GetLink("/assets/styles/main.css")" />

</head>
<body class="dark">
    <header>
        <div class="logo">
            <div class="title">@ViewBag.HeaderTitle</div>
        </div>
        <nav>
            <ul>
                @{
                    foreach (var link in (IEnumerable<Link>)ViewBag.Links)
                    {
                        <li><a href="@link.Url">@link.Label</a></li>
                    }
                }

                @if (ViewBag.ShowDarkModeToggle)
                {
                    <li>
                        <label class="switch">
                            <input type="checkbox" checked="checked" onchange="this.checked ? document.querySelector('body').classList.add('dark') : document.querySelector('body').classList.remove('dark')">
                            <span class="slider round"></span>
                        </label>
                    </li>
                }
            </ul>
        </nav>
    </header>

    <main>
        <div class="layout">
            @RenderBody()
        </div>
    </main>
    <footer>
        <div class="footer-wrapper">
            <div class="logo">
                <div>Jamstack on .Net</div>
                <div>by Kontent</div>
            </div>
            <div class="footer-column-group">
                <div class="footer-column">
                    <span>Resources</span>
                    <ul>
                        <li><a href="#">Resource 1</a></li>
